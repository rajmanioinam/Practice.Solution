<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="Practice.WCF.MultiContractService.CompanyService" behaviorConfiguration="mexBehavior">
        <endpoint address="PracticeService" binding="basicHttpBinding" contract="Practice.WCF.MultiContractService.IExternalService"></endpoint>
        <endpoint address="PracticeService" binding="netTcpBinding" contract="Practice.WCF.MultiContractService.IInternalService"></endpoint>

        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080"/>
            <add baseAddress="net.tcp://localhost:8090/"/>
          </baseAddresses>
        </host>
      </service>      
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>